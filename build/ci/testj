pipeline {
    agent any

    environment {
	registry = "vicsnr/webapp"
	registryCredential = 'dockerhub'
        dockerImage= ''
    }

    stages {

        stage ('Build Image') {
            steps{
			  
		  sh "docker build $registry:$CONTAINER_TAG"
			  }
			
        }

		stage('Push Image') {
		  steps{
			script {
			  docker.withRegistry( '', registryCredential ) {
				dockerImage.push()
			  }
			}
		  }
		}

		stage('Remove Unused docker image') {
		  steps{
			sh "docker rmi $registry:$CONTAINER_TAG"
		  }
		}
          }
       }
